</div>

<div class="demo__section">
    <h1 class="demo__title">Slider Videos</h1>
    <div class="slider-videos">
        <div class="slider-videos__slider">
            <button type="button" class="slider-videos__prev">
                <i class="icon-meyker-chevron-thin-left"></i>
            </button>
            <div class="slider-videos__body">
                <div class="slider-videos__list">
                    {{#repeat 8}}
                    <div class="slider-videos__item">
                        <div class="slider-videos__image" style="background-image: url(https://loremflickr.com/500/500/nature);"></div>
                        <button type="button" class="slider-videos__play">
                            <i class="icon-meyker-play3"></i>
                        </button>
                    </div>
                    {{/repeat}}
                </div>
            </div>
            <button type="button" class="slider-videos__next">
                <i class="icon-meyker-chevron-thin-right"></i>
            </button>
        </div>
        <div class="slider-videos__dots"></div>
    </div>
</div>